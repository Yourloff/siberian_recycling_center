<p style="color: green"><%= notice %></p>

<h1>Акты &mdash; главная</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @acts.each do |act| %>
    <tr>
      <td><%= act.user&.name %></td>
      <td><%= act.act_data %></td>
      <td><%= link_to "Показать", act %></td>
      <td><%= link_to "Редактировать", edit_act_path(act) %></td>
      <td><%= link_to "Удалить", act, method: :delete, data: { confirm: "Вы уверены?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Новый акт", new_act_path %>
